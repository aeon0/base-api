{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "ts-node": {
        "files": true
    }
}
